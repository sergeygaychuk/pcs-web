extends layout

block main
  include ./_header
  .tp-toolbar.row
    .col-xs-12.col-md-10.col-xl-14.pull-right
      block toolbar
  .tp-main.row
    .col-xs-4.col-md-2.col-xl-2.tp-sidebar
      ul.nav.tp-menu-side
        li
          a(href='#') Устройства
        li
          a(href='#') Apхив
        li(class=active=='users'?'active':'')
          a(href='/users')= t('user.self.plural')
    .col-xs-12.col-md-10.col-xl-14.tp-content
      block content
      include ./_footer

