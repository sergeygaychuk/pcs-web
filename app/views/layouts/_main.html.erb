<% if signed_in? %>
<body class="user">

<%= render 'layouts/header' %>
<div class="row tp-toolbar">
  <div class="col-xs-12 col-md-10 col-xl-14 pull-right">
    <%= yield(:toolbar) %>
  </div>
</div>
<div class="row tp-main">
  <div class="col-xs-4 col-md-2 col-xl-2 tp-sidebar">
    <ul class="nav tp-tools-side">
      <%= yield (:sidebar) %>
    </ul>
    <ul class="nav tp-menu-side">
      <li><a href="#">Moниторинг</a></li>
      <li class="<%= yield(:device_class) %>">
      <a href="/devices"><%= t 'devices.index.title' %></a>
      </li>
      <% if current_user.admin? %>
        <li class="<%= yield(:user_class) %>">
        <a href="/users"><%= t 'users.index.title' %></a>
        </li>
      <%end %>
    </ul>
  </div>
  <div class="col-xs-12 col-md-10 col-xl-14 tp-content">
    <%= yield %>
    <%= render 'layouts/footer' %>
  </div>
</body>
</div>
<% else %>
<body>
  <%= render 'layouts/header_signin' %>
  <%= yield %>
  <%= render 'layouts/footer' %>
</body>
<% end %>
