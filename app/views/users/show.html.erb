<div class="row tp-user"><div class="col-lg-6">
<%= form_for(@user, :html => { class: "form-horizontal" }) do |f| %>
  <div class="form-group">
    <label class="tp-photo conrtol-label col-sm-3">
      <span class="glyphicon glyphicon-user"></span>
    </label>
    <%= f.label :name, "Полное имя", class: "control-label hidden" %>
    <div class="col-sm-9">
      <%= f.text_field :name, class: "form-control input-lg" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, "Эл.почта", class: "control-label col-sm-3" %>
    <div class="col-sm-9">
      <%= f.text_field :email, class: "form-control input-sm" %>
    </div>
  </div>
<% end %>
</div></div>

