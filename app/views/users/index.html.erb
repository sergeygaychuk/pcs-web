<% provide(:title, 'Пользователи') %>
<% content_for :user_class, "active" %>

<div class="tp-data">
  <table class="tp-data">
    <colgroup>
      <col class="tp-check"/>
      <col class="col-xs-6 col-sm-4 col-xl-2"/>
      <col class="col-xs-3 col-sm-2 col-xl-2"/>
      <col class="tp-text"/>
    </colgroup>
    <tbody>
      <% @users.each do |user| %> 
        <tr>
          <td class="tp-check">
            <div class="tp-check"></div>
          </td>
          <td class="tp-sender">
            <%= link_to user.name, user %>
          </td>
          <td>
            <%= link_to user.email, user %>
          </td>
          <td>
          </td>
          <td>
          </td>
          <td class="tp-date">
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
