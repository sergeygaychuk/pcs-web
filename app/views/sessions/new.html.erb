<% provide(:title, "регистрация") %>
<div class="container">

  <h2 class="form-signin-heading text-center">Для работы в системе необходима регистрация</h2>
  <%= form_for(:session, url: sessions_path, :html => { class: "form-signin" }) do |f| %>

    <%= f.label :email, "Эл.почта", class: "hidden" %>
    <%= f.text_field :email, class: "form-control", placeholder: "Эл.почта",
      :required => "true", autofocus: "true" %>

    <% if flash[:error].nil? %>
      <%= f.label :password, "Пароль", class: "hidden" %>
      <%= f.password_field :password, class: "form-control", placeholder: "Пароль",
        :required => "true" %>
    <% else %>
    <div class="form-group has-error">
      <%= f.label :password, class: "hidden" %>
      <%= f.password_field :password, class: "form-control", placeholder: "Пароль",
        :required => "true" %>
      <label class="help-block"><%= flash[:error] %></label>
    </div>
    <% end %>

    <%= f.submit "Регистрация", class: "btn btn-lg btn-primary btn-block" %>
    <label class="checkbox">
      <input type="checkbox" value="remember-me">Оставаться в системе</input>
    </label>
  <% end %>
</div> <!-- /container -->
